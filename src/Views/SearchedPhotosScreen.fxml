<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="Controllers.SearchPhotoController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #34495e;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <ToolBar style="-fx-background-color: #2c3e50; -fx-padding: 5;">
         <items>
            <Button fx:id="GalleryViewBtn" onAction="#onGalleryViewBtnClicked" text="Gallery View" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 10;"/>
            <Button fx:id="CreateAlbumBtn" onAction="#onCreateAlbumBtnClicked" text="Create Album" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 10;"/>
         </items>
      </ToolBar>
   </top>
   <center>
      <ListView fx:id="PhotoListView" style="-fx-control-inner-background: #ecf0f1;"/>
   </center>
</BorderPane>
